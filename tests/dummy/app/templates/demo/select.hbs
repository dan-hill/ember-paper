{{page-toolbar pageTitle="Select" isDemo=true}}

{{#doc-content}}
<h2>Basic Usage</h2>

<p>Enter an address</p>
<div class="layout-row">
  {{! BEGIN-SNIPPET select.basic-usage }}
  {{o-input label="Street Name" value=street onChange=(action (mut street))}}
  {{o-input label="City" value=city onChange=(action (mut city))}}
  {{#o-select
    disabled=disableSelect
    label="State"
    options=states
    selected=userState
    onChange=(action (mut userState))
    as |state|}}
    {{state.abbrev}}
  {{/o-select}}
  {{! END-SNIPPET }}
</div>

<p>
  {{o-checkbox label="Disable select" value=disableSelect onChange=(action (mut disableSelect))}}
</p>
<h3>Template</h3>
{{code-snippet name="select.basic-usage.hbs"}}

<h2>Option groups</h2>

<p>Pick your pizza below</p>
<div class="layout-row">
  {{! BEGIN-SNIPPET select.option-groups }}
  {{#o-select options=sizes label="Size" required=true selected=pizzaSize onChange=(action (mut pizzaSize)) as |size|}}
    {{size}}
  {{/o-select}}
  {{#o-select options=groupedToppings label="Topping" selected=topping onChange=(action (mut topping)) as |topping|}}
    {{topping}}
  {{/o-select}}
  {{! END-SNIPPET }}
</div>

<h3>Template</h3>
{{code-snippet name="select.option-groups.hbs"}}

<h2>Options with async search</h2>

<div class="layout-column layout-align-center-center">
  <p>
    Select will correctly resolve any promise you pass to the <code>options</code> property.
  </p>
  <div class="layout-column layout-align-center-center" style="height: 130px;">
    {{! BEGIN-SNIPPET select.async-search }}
  {{#o-select
    placeholder="Assign to a user"
    selected=selectedUser
    options=users
    onChange=(action (mut selectedUser))
    as |user|}}
    {{user.name}}
  {{/o-select}}

  {{#if selectedUser}}
    <p>You have selected the user <code>{{selectedUser.name}}</code></p>
  {{/if}}
    {{! END-SNIPPET }}
  </div>
</div>
<h3>Template</h3>
{{code-snippet name="select.async-search.hbs"}}

