  {{#o-card-content}}
    <h2>Simple dropdown menu</h2>

    <p>
      Note that applying the class <code class="paper">.md-menu-origin</code>
      and <code class="paper">md-menu-align-target</code>attributes ensure that the menu elements align.
    </p>

  <div class="layout-column layout-align-center-center">
  {{! BEGIN-SNIPPET menu.simple-dropdown }}
  {{#o-menu as |menu|}}
    {{#menu.trigger}}
      {{#o-button iconButton=true}}
        {{o-icon "local_phone"}}
      {{/o-button}}
    {{/menu.trigger}}
    {{#menu.content width=4 as |content|}}
      {{#each items as |item|}}
        {{#content.menu-item onClick="openSomething"}}
          {{o-icon item.icon}}
          <span>{{item.title}}</span>
        {{/content.menu-item}}
      {{/each}}

      {{#content.menu-item onClick="openSomething" disabled=true}}
        {{o-icon "adb"}}
        <span>This is disabled.</span>
      {{/content.menu-item}}

      {{o-divider}}

      {{#each items as |item|}}
        {{#content.menu-item onClick="openSomething"}}
          {{o-icon item.icon}} {{item.title}}
        {{/content.menu-item}}
      {{/each}}
    {{/menu.content}}
  {{/o-menu}}
  {{! END-SNIPPET }}
</div>

