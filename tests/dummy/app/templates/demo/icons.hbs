{{page-toolbar pageTitle="Icons" isDemo=true}}

{{#doc-content}}

  <h2>Available Icons</h2>
  <p>
    See the <a href="https://design.google.com/icons/" target="_blank">Material Icons page</a> for an overview of
    available icons.
  </p>

  <h2>Usage</h2>

  <h3>Basic Icons</h3>
  <div>
    {{! BEGIN-SNIPPET icons.basic-usage }}
    {{o-icon "check-circle"}}
    {{! END-SNIPPET }}
  </div>
  {{code-snippet name="icons.basic-usage.hbs"}}

  <h3>Changing Sizes</h3>
  <div class="layout-row">
    {{! BEGIN-SNIPPET icons.sizes }}
    {{o-icon "check-circle" size=12}}
    {{o-icon "check-circle" size=18}}
    {{o-icon "check-circle" size=24}}
    {{o-icon "check-circle" size=36}}
    {{o-icon "check-circle" size=48}}
    {{! END-SNIPPET }}
  </div>
  {{code-snippet name="icons.sizes.hbs"}}

  <h3>Spinners</h3>
  <div>
    {{! BEGIN-SNIPPET icons.spinners }}
    {{o-icon "rotate-right" spin=true}}
    {{o-icon "rotate-left" reverseSpin=true}}
    {{! END-SNIPPET }}
  </div>
  {{code-snippet name="icons.spinners.hbs"}}
{{/doc-content}}
