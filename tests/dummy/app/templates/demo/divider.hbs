{{page-toolbar pageTitle="Divider" isDemo=true}}

{{#doc-content}}

  {{#o-card}}
    {{#o-toolbar}}
      {{#o-toolbar-tools}}
        <h2>Full Bleed</h2>
        <span class="flex"></span>
        {{#o-button onClick=(action "toggleSourceCodeFull") iconButton=true}}
          {{o-icon icon="code"}}
        {{/o-button}}
      {{/o-toolbar-tools}}
    {{/o-toolbar}}
    {{#o-content}}
      <div class="doc-code-example {{if showSourceCodeFull 'is-visible'}}">
        {{code-snippet name="divider.full.hbs"}}
      </div>
      {{! BEGIN-SNIPPET divider.full }}
      {{#o-list}}
        {{#each messages as |item|}}
          {{#o-item class="md-3-line"}}
            <div class="md-list-item-text">
              <h3>{{item.what}}</h3>
              <h4>{{item.who}}</h4>
              <p>{{item.notes}}</p>
            </div>
            {{o-divider}}
            {{#o-button}}Respond{{/o-button}}
          {{/o-item}}
        {{/each}}
      {{/o-list}}
      {{! END-SNIPPET }}
    {{/o-content}}

  {{/o-card}}

  {{#o-card}}
    {{#o-toolbar}}
      {{#o-toolbar-tools}}
        <h2>Inset</h2>
        <span class="flex"></span>
        {{#o-button onClick=(action "toggleSourceCodeInset") iconButton=true}}
          {{o-icon icon="code"}}
        {{/o-button}}
      {{/o-toolbar-tools}}
    {{/o-toolbar}}
    {{#o-content}}
      <div class="doc-code-example {{if showSourceCodeInset 'is-visible'}}">
        {{code-snippet name="divider.inset.hbs"}}
      </div>
      {{! BEGIN-SNIPPET divider.inset }}
      {{#o-list classNames="list-demo"}}
        {{#each messages as |item|}}
          {{#o-item class="md-3-line"}}
            <img src="{{item.face}}?{{$index}}" class="face" alt="{{item.who}}">
            <div class="md-list-item-text">
              <h3>{{item.what}}</h3>
              <h4>{{item.who}}</h4>
              <p>{{item.notes}}</p>
            </div>
            {{o-divider inset=true}}
          {{/o-item}}
        {{/each}}
      {{/o-list}}
      {{! END-SNIPPET }}
    {{/o-content}}
  {{/o-card}}
{{/doc-content}}
